{{!-- <p>Connected to server (from index.handlebars file)</p> --}}

<h1>Eat-Da-Burger!</h1>
<br>

<img src="/assets/img/burger.png" id="burger">
<br>

<h2>Burgers that are not devoured!</h2>

<ul>
  {{#each burgerData}}
    {{#unless this.devoured}}
      {{!-- {{> cats/cat-block sleep=true}} --}}
      <p>{{this.id}}. {{this.burger_name}}</p>
      {{!-- <pre>{{this.id}}. {{this.burger_name}}</pre> --}}
      <form method="POST" action="/burgers/:id?_method=PUT">
        <input type="hidden" name="burger_id" type="text" value={{this.id}}>
        <button type="submit">Devour it!</button>      
      </form>
    {{/unless}}
  {{/each}}
</ul>

